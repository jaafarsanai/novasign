/* ScreenCloud-ish layout: simple, card rows, subtle borders */

.sc-page {
  padding: 24px;
}

.sc-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  margin-bottom: 16px;
}

.sc-title {
  margin: 0;
  font-size: 28px;
  font-weight: 700;
  letter-spacing: -0.02em;
}

.sc-header-right {
  display: flex;
  align-items: center;
  gap: 12px;
}

.sc-search {
  display: flex;
  align-items: center;
  gap: 8px;
  border: 1px solid rgba(0,0,0,0.12);
  border-radius: 10px;
  padding: 8px 10px;
  min-width: 420px;
  background: #fff;
}

.sc-search-ico {
  opacity: 0.6;
}

.sc-search-input {
  width: 100%;
  border: 0;
  outline: none;
  font-size: 14px;
  background: transparent;
}

.sc-btn {
  border: 1px solid rgba(0,0,0,0.12);
  background: #fff;
  padding: 10px 14px;
  border-radius: 10px;
  font-weight: 600;
  cursor: pointer;
}

.sc-btn:hover {
  background: rgba(0,0,0,0.03);
}

.sc-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.sc-btn-ghost {
  background: #fff;
}

.sc-btn-primary {
  border-color: rgba(0,0,0,0.15);
  background: #111827;
  color: #fff;
}

.sc-btn-primary:hover {
  background: #0b1220;
}

.sc-error {
  padding: 10px 12px;
  border-radius: 10px;
  border: 1px solid rgba(220, 38, 38, 0.3);
  background: rgba(220, 38, 38, 0.06);
  color: #991b1b;
  overflow: auto;
  margin-bottom: 16px;
}

.sc-empty {
  margin-top: 40px;
  display: flex;
  justify-content: center;
}

.sc-empty-card {
  width: min(720px, 100%);
  border: 1px solid rgba(0,0,0,0.10);
  border-radius: 14px;
  padding: 18px;
  background: #fff;
}

.sc-empty-head {
  font-size: 16px;
  font-weight: 800;
  margin-bottom: 6px;
}

.sc-empty-sub {
  opacity: 0.75;
  margin-bottom: 14px;
}

.sc-empty-actions {
  display: flex;
  gap: 10px;
}

/* List rows */

.sc-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.sc-row {
  display: grid;
  grid-template-columns: 1.2fr 0.7fr auto;
  align-items: center;
  gap: 12px;
  border: 1px solid rgba(0,0,0,0.10);
  border-radius: 14px;
  background: #fff;
  padding: 14px;
  box-shadow: 0 1px 0 rgba(0,0,0,0.02);
}

.sc-row-left {
  display: flex;
  align-items: center;
  gap: 12px;
  min-width: 0;
}

.sc-icon {
  width: 38px;
  height: 38px;
  border-radius: 10px;
  border: 1px solid rgba(0,0,0,0.10);
  display: grid;
  place-items: center;
  background: rgba(0,0,0,0.02);
  flex: 0 0 auto;
}

.sc-icon > span {
  width: 16px;
  height: 12px;
  border: 2px solid rgba(0,0,0,0.65);
  border-radius: 3px;
  display: block;
}

.sc-icon.is-virtual > span {
  border-style: dashed;
}

.sc-main {
  min-width: 0;
}

.sc-name {
  font-weight: 800;
  font-size: 15px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sc-sub {
  margin-top: 4px;
  font-size: 12.5px;
  opacity: 0.75;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 6px;
}

.sc-sub-pill {
  font-weight: 700;
  font-size: 11px;
  padding: 2px 8px;
  border-radius: 999px;
  border: 1px solid rgba(0,0,0,0.12);
  background: rgba(0,0,0,0.02);
}

.sc-sub-dot {
  opacity: 0.5;
}

.sc-sub-muted {
  opacity: 0.8;
}

.sc-sub-mono {
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
  font-size: 12px;
}

.sc-row-mid {
  min-width: 0;
}

.sc-now-label {
  font-size: 11px;
  letter-spacing: 0.08em;
  font-weight: 800;
  opacity: 0.55;
  margin-bottom: 4px;
}

.sc-now-value {
  font-weight: 700;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sc-row-right {
  display: flex;
  align-items: center;
  gap: 10px;
  justify-content: flex-end;
}

.sc-badge {
  font-weight: 900;
  font-size: 12px;
  padding: 6px 10px;
  border-radius: 999px;
  border: 1px solid rgba(0,0,0,0.10);
}

.sc-badge-live {
  background: rgba(16, 185, 129, 0.12);
  border-color: rgba(16, 185, 129, 0.35);
}

.sc-badge-off {
  background: rgba(0,0,0,0.04);
  border-color: rgba(0,0,0,0.12);
  opacity: 0.8;
}

/* Actions menu */

.sc-menu {
  position: relative;
}

.sc-menu-btn {
  width: 36px;
  height: 36px;
  border-radius: 10px;
  border: 1px solid rgba(0,0,0,0.12);
  background: #fff;
  cursor: pointer;
  font-size: 18px;
  line-height: 0;
}

.sc-menu-btn:hover {
  background: rgba(0,0,0,0.03);
}

.sc-menu-pop {
  position: absolute;
  right: 0;
  top: 44px;
  width: 180px;
  border: 1px solid rgba(0,0,0,0.10);
  border-radius: 12px;
  background: #fff;
  box-shadow: 0 16px 40px rgba(0,0,0,0.12);
  padding: 6px;
  z-index: 30;
}

.sc-menu-item {
  width: 100%;
  text-align: left;
  border: 0;
  background: transparent;
  padding: 10px 10px;
  border-radius: 10px;
  cursor: pointer;
  font-weight: 650;
  font-size: 13px;
}

.sc-menu-item:hover {
  background: rgba(0,0,0,0.04);
}

.sc-menu-item.is-danger {
  color: #b91c1c;
}

.sc-menu-item.is-danger:hover {
  background: rgba(185, 28, 28, 0.08);
}

/* Pagination */

.sc-pager {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  margin-top: 14px;
  padding: 10px 12px;
  border: 1px solid rgba(0,0,0,0.10);
  border-radius: 14px;
  background: #fff;
}

.sc-pager-left {
  display: flex;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
}

.sc-pager-count {
  font-size: 13px;
  opacity: 0.8;
}

.sc-pager-size {
  border: 1px solid rgba(0,0,0,0.12);
  border-radius: 10px;
  padding: 8px 10px;
  background: #fff;
  font-weight: 650;
  font-size: 13px;
}

.sc-pager-right {
  display: flex;
  align-items: center;
  gap: 6px;
}

.sc-pager-btn {
  border: 1px solid rgba(0,0,0,0.12);
  background: #fff;
  padding: 8px 10px;
  border-radius: 10px;
  cursor: pointer;
  font-weight: 700;
  font-size: 13px;
}

.sc-pager-btn:hover {
  background: rgba(0,0,0,0.03);
}

.sc-pager-btn:disabled {
  opacity: 0.55;
  cursor: not-allowed;
}

.sc-pager-btn.is-active {
  background: #111827;
  color: #fff;
  border-color: rgba(17, 24, 39, 0.65);
}

.sc-pager-ellipsis {
  padding: 0 4px;
  opacity: 0.6;
}
.ns2-rowtitle {
  display: flex;
  align-items: center;
  gap: 12px;
}

.ns2-thumb {
  width: 56px;
  height: 56px;
  border-radius: 12px;
  background: #f2f3f5;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  flex: 0 0 56px;
}

.ns2-thumb::before {
  content: "";
  width: 36px;
  height: 36px;
  background: #19191b;
}

.ns2-thumb-screen::before {
  -webkit-mask: url("/assets/icons/browser.svg") center center / contain no-repeat;
  mask: url("/assets/icons/browser.svg") center center / contain no-repeat;
}

